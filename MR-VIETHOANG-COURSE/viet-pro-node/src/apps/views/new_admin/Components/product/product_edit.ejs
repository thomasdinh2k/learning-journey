<%- include("../../layout/HTMLhead.ejs", {currentPage: ""}) %>

<body>
  <!-- Sidebar -->
  <%- include("../../layout/sidebar.ejs", {currentPage: "products"}) %>
  <!-- End of Sidebar -->

  <!-- Main Content -->
  <div class="content">
    <!--Nav bar-->

    <%- include("../../layout/navbar.ejs", {userName: userCredential})%>

    <!-- End of Nav Bar-->

    <main>

      <!-- Header -->
      <%- include("../../layout/header.ejs", { title: "Sửa sản phẩm", breadcrumb: ["admin", "all_products/edit_product"]}) %>

    </main>
    <!-- End of Header -->
    <!-- Page Content -->
    <div class="row">
      <div class="add-product">
        <div class="panel panel-default">
          <div class="panel-body">
            <!-- Add product -->
            <div class="form-container">
              <div class="form-header">
                <h2>Thông tin cơ bản</h2>
              </div>
              <div class="column left">
                <form role="form" method="post" enctype="multipart/form-data" action="/admin/products/update/<%= product._id %>">
                  <div class="form-group">
                    <label>Tên sản phẩm</label>
                    <input name="name" class="form-control" placeholder="" value="<%= product.name %>">
                  </div>

                  <div class="form-group">
                    <label>Giá sản phẩm</label>
                    <input name="price" type="number" min="0" class="form-control" value="<%= product.price %>">
                  </div>
                  <div class="form-group">
                    <label>Bảo hành</label>
                    <input name="warranty" type="text" class="form-control" value="<%= product.warranty %>">
                  </div>
                  <div class="form-group">
                    <label>Phụ kiện</label>
                    <input name="accessories" type="text" class="form-control" value="<%= product.accessories %>">
                  </div>
                  <div class="form-group">
                    <label>Khuyến mãi</label>
                    <input name="promotion" type="text" class="form-control" value="<%= product.promotion %>">
                  </div>

              </div>
            </div>
          </div>

          <div class="panel-body">
            <div class="form-container">
              <div class="form-header">
                <h2>Thông tin nâng cao</h2>
              </div>
            </div>
            <div class="form-group">
              <label>Ảnh sản phẩm</label>

              <input name="thumbnail" type="file">
              <br>
              <div>
                <img width="160" src=" /static/images/<%= product.thumbnail %>">
              </div>
            </div>

            <div class="form-group">
              <label>Danh mục</label>
              <select name="cat_id" class="form-control">
                <!-- <option>Chọn danh mục sản phẩm</option> -->
                <% for (category of categories) { %>
                <option value=<%=category._id%> <%= category.id == product.cat_id ? "selected" : "" %>> <%= category.title %> </option>
                <!-- // TODO: Check lai -->
                <% } %>
              </select>
            </div>


            <div class="form-group">
              <label>Trạng thái</label>
              <select name="status" class="form-control">
                <option value=1 <%= product.is_stock == 1 ? "selected" : "" %>>Còn hàng</option>
                <option value=0 <%= product.is_stock == 0 ? "selected" : "" %>>Hết hàng</option>
                <!-- // TODO: Check lai -->
              </select>
            </div>

            <div class="form-group">
              <label>Sản phẩm nổi bật</label>
              <!-- // TODO: Check lai -->
              <div class="checkbox">
                <input name="featured" type="checkbox" value="yes" <%= product.featured == true ? "checked" : "" %>>
              </div>
            </div>
            <div class="form-group">
              <label>Mô tả sản phẩm</label>
              <div id="editor">
                <p>This is some sample content.</p>
            </div>
            </div>
            <div class="btn-layout">
              <button name="sbm" type="submit" class="btn btn-export">Cập nhật</button>
            </div>
          </div>
          </form>
        </div>
      </div>
    </div>
    <!-- End of page content-->
  </div>
  <%- include("../../layout/HTMLfoot.ejs") %>