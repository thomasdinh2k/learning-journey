<!DOCTYPE html>
<html>
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<title>Vietpro Mobile Shop - Administrator</title>

		<base href="/static/admin/" />
		<link href="css/bootstrap.min.css" rel="stylesheet" />
		<link href="css/datepicker3.css" rel="stylesheet" />
		<link href="css/bootstrap-table.css" rel="stylesheet" />
		<link href="css/styles.css" rel="stylesheet" />

		<!--[if lt IE 9]>
			<script src="js/html5shiv.js"></script>
			<script src="js/respond.min.js"></script>
		<![endif]-->
	</head>

	<body>
		<div class="row">
			<div
				class="col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2 col-md-4 col-md-offset-4"
			>
				<div class="login-panel panel panel-default">
					<div class="panel-heading">Vietpro Mobile Shop - Administrator</div>
					<div class="panel-body">
						<!-- Authenticate error alert -->

						

						<% if (error) { %>
							<div class="alert alert-danger"><strong>Lỗi đăng nhập: </strong><%= error%></div>
						<%}%>

						<form role="form" method="post" action="/admin/login">
							<fieldset>
								<div class="form-group">
									<input
										class="form-control"
										placeholder="E-mail"
										name="email"
										<% if (typeof userEmail != 'undefined') { %>
											value = <%= userEmail %>
										<% } else { %>
											autofocus
										<% } %>
									/>
								</div>
								<div class="form-group">
									<input
										class="form-control"
										name="password"
										type="password"
										placeholder=
										<% if (typeof userPassword == 'undefined') { %>
											"Nhập mật khẩu"
										<% } else { %>
											"Mật khẩu không phải <%=userPassword%> đâu! Thử cái khác đi :)"
										<% } %>

										<% if (typeof userEmail != 'undefined') { %>
											autofocus
										<% } %>
									/>
								</div>
								<div class="checkbox">
									<label>
										<input
											name="remember"
											type="checkbox"
											value="Remember Me"
										/>Nhớ tài khoản
									</label>
								</div>
								<button type="submit" class="btn btn-primary">Đăng nhập</button>
							</fieldset>
						</form>
					</div>
				</div>
			</div>
			<!-- /.col-->
		</div>
		<!-- /.row -->
	</body>
</html>
